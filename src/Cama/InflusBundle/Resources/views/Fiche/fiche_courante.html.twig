{% extends "::base.html.twig" %}

{% block title %}Gestion de ma fiche d'inter-partie {% endblock %}
{% block body %}
<h1>Voir ma fiche d'inter-partie</h1>
<h2>{{ perso.nom }} - {{ tour.mois }}</h2>
<br /><br />
<h3>Actions vampiriques ({{ tour.actions }})</h3>
{% if actions|length < 1 %}
<p>Aucune action sauvegardée.</p>
{% else %}
<table>
  <thead>
    <tr>
      <th> Actions : </th>
    </tr>
  </thead>
  {% for action in actions %}
        {{ include('CamaInflusBundle:Fiche:action_ligne.html.twig', { 'action': action}) }}
  {% endfor %}
</table>
{% endif %}
<br /><br />
<h3>Demande aux contacts</h3>
<br /><br />
<h3>Gestion des influence</h3>
{% if influences|length < 1 %}
<p>Aucun ordre d'influence sauvegardé.</p>
{% else %}
<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Attaque</th>
      <th>Défense</th>
      <th>Dissimuler</th>
      <th>Pister</th>
      <th>Espionner</th>
      <th>Croissance</th>
      <th>Transfert</th>
      <th>Observation</th>
      <th>Spécifique</th>
    </tr>
  </thead>
  {% for influence in influences %}
        {{ include('CamaInflusBundle:Fiche:influence_ligne.html.twig', { 'influence': influence, 'ordres':ordres}) }}
  {% endfor %}
</table>
{% endif %}
<br /><br />
<h3>Améliorer un attribut d'un point :</h3>
{% if attribut is empty %}
<p>Aucun</p>
{% else %}
<p>Améliorer le {{ attribut }}</p>
{% endif %}
<h3>Commentaires</h3>
<a href="{{ path('editerFiche') }}">Editer la fiche</a>
{% endblock %}